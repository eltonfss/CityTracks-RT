        android:layout_marginStart="@dimen/small_margin"
        android:textSize="@dimen/default_text_size" />
    <TextView
        android:id="@+id/tempo_de_parada_medio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
